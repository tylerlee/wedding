    <script type="text/javascript">
      setTitle = function () {
        const title = document.getElementsByTagName('title')[0];
        const weddingDate = new Date(2016, 7, 28, 16, 30);
        const today = new Date();
        const oneDay = 24*60*60*1000;
        const diffDays = Math.round((weddingDate.getTime() - today.getTime())/(oneDay));

        if (diffDays > 0) {
          title.innerHTML = diffDays + ' Days until Tyler & Jen\'s Wedding';
        } else if (diffDays = 0) {
          title.innerHTML = 'It\'s Today';
        }
      }

      window.onload = function () {
        setTitle();
      };
